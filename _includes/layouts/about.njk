---
#layout: layouts/base.njk
templateClass: tmpl-about
---
{% extends "layouts/base.njk" %}

{% set postAuthor = metadata.authors[author] %}

{% block article %}

{{ content | safe }}

{% for key, author in metadata.authors %}
    <div class="flex items-center">
      <img class="avatar" src="{{ author.avatarUrl }}" alt="avatar">
      <h4 style="margin-left: 12px;"><a href="/posts/{{ key }}">{{ author.name }}</a></h4>
    </div>
    
    <p style="margin-top: 0">{{ author.intro | safe }}</p>
{% endfor %}

{% endblock %}
